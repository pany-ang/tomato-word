
.content {
	width: 100vw;
	min-height: 100vh;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	    -ms-flex-align: start;
	        align-items: flex-start;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.background-red {
	z-index: -1;
	width: 100vw;
	height: 40vh;
	position: fixed;
	top: 0px;
	left: 0px;
	background-image: -webkit-gradient(linear, left top, left bottom, from(#e16531), to(#F5F5F5));
	background-image: -o-linear-gradient(#e16531, #F5F5F5);
	background-image: linear-gradient(#e16531, #F5F5F5);
}
.background-gray {
	z-index: -1;
	width: 100vw;
	height: 60vh;
	position: fixed;
	top: 40vh;
	left: 0px;
	background-color: #F5F5F5;
}
.top {
	width: 90vw;
